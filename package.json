{
  "name": "cubyz-discord-relay",
  "version": "2.1.1",
  "description": "Bot that relays messages between a Cubyz server and a Discord channel.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cubyz-discord-relay": "dist/index.js"
  },
  "scripts": {
    "check": "biome check .",
    "check:write": "biome check --write .",
    "build": "tsc",
    "clean": "rm -rf dist",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "tsx --test test/*.test.ts",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "cubyz",
    "discord",
    "relay",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist",
    "config.example.json",
    "README.md"
  ],
  "dependencies": {
    "cubyz-node-client": "^1.1.0",
    "discord.js": "^14.23.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/node": "^24.9.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
